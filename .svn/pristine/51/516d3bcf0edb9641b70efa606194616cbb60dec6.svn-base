-(void)refreshData{
	if ([AppHelper isValidatedUser]) {
        if (selectedIndex==0) {
            [self loadFollowFromWeb];
        }
		else{
            [self loadFanFromWeb];
        }
	}
}

-(void)clearData{
    [arrFan removeAllObjects];
    [tbFan reloadData];
    [arrFollow removeAllObjects];
    [tbFollow reloadData];
    lblFans.text=@"粉丝";
    lblFollow.text=@"关注";
}

